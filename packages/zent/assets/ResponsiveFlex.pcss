.ResponsiveFlex {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;

  &__placeholder {
    height: 0;
    overflow: hidden;
  }
}

.ResponsiveFlexItem {
  box-sizing: border-box;
  position: relative;
  flex-shrink: 0;

  &__placeholder {
    width: 100%;
    height: 0;
    padding-top: 0;
  }

  &__main {
    position: absolute;
    width: 100%;
    left: 0;
    top: 0;
    bottom: 0;
  }
}
